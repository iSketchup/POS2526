<Window x:Class="Notenliste.WindowStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notenliste"
        mc:Ignorable="d"
        Title="WindowStudent" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <Label Content="First Name:" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Grid.Row="0" Grid.Column="0"/>
        <Label Content="Last Name:" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Grid.Row="1" Grid.Column="0"/>
        <TextBox x:Name="TbFirstname" Grid.Row="0" Grid.Column="1"/>
        <TextBox x:Name="TbLastname" Grid.Row="1" Grid.Column="1"/>

        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <Button x:Name="BtnOk" Content="OK" IsDefault="True" FontSize="30" Margin="10" Padding="50 5 50 5" Click="BtnOk_Click"/>
            <Button x:Name="BtnCancel" Content="Cancel" IsCancel="True" FontSize="30" Margin="10" Padding="50 5 50 5"/>
        </StackPanel>
    </Grid>
</Window>
