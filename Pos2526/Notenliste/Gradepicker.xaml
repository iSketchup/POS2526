<Window x:Class="Notenliste.Gradepicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notenliste"
        mc:Ignorable="d"
        Title="Gradepicker" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            
            <Label Content="Subject" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Grid.Row="0" Grid.Column="0"/>
        <ComboBox x:Name="CbSubject" Grid.Row="0" Grid.Column="1" FontSize="30" SelectedIndex="0" Margin="10"/>

        <Label Content="Grade" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Grid.Row="1" Grid.Column="0"/>
        <ComboBox x:Name="CbGrade" Grid.Row="1" Grid.Column="1" SelectedIndex="0" FontSize="30" Margin="10"/>


        <Label Content="Date" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Grid.Row="2" Grid.Column="0"/>
        <DatePicker x:Name="DpDate" Language="en-GB" Grid.Row="2" Grid.Column="1" FontSize="30" Margin="10"/>

        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <Button x:Name="BtnOk" Content="OK" IsDefault="True" FontSize="30" Margin="10" Padding="50 5 50 5" Click="BtnOk_Click"/>
            <Button x:Name="BtnCancel" Content="Cancel" IsCancel="True" FontSize="30" Margin="10" Padding="50 5 50 5"/>
        </StackPanel>
        
    </Grid>
</Window>
