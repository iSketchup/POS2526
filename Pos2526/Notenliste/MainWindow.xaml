<Window x:Class="Notenliste.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notenliste"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>



        <DockPanel>
            <StackPanel Orientation="Vertical" Margin="10" HorizontalAlignment="Left"  Width="100" Grid.Row="0" Grid.Column="0">
                <Button x:Name="ButtonAdd" Content="Add Student" Padding="5" Margin="10" Click="ButtonAdd_Click" />
                <Button x:Name="ButtonAddGrade" Content="Add Grade" Padding="5" Margin="10" Click="ButtonAddGrade_Click"  />
                <Button x:Name="ButtonDelete" Content="Delete" Padding="5" Margin="10" Click="ButtonDelete_Click" />
                <Button x:Name="ButtonEdit" Content="Edit" Padding="5" Margin="10" Click="ButtonEdit_Click" />
                <Button x:Name="ButtonSave" Content="Save" Padding="5" Margin="10" Click="ButtonSave_Click" />
                <Button x:Name="ButtonLoad" Content="Load" Padding="5" Margin="10" Click="ButtonLoad_Click" />
            </StackPanel>

            <ListView x:Name="LvStudents" Grid.Row="0" Grid.Column="1" SelectionChanged="LvStudents_SelectionChanged"/>
            
            
            <ListView x:Name="LvGrades" Grid.Row="0" Grid.Column="3"/>

        </DockPanel>

    </Grid>
</Window>
