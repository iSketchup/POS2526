<Window x:Class="Notenliste.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notenliste"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        
        <DockPanel>
            <StackPanel Orientation="Vertical" Margin="10" HorizontalAlignment="Left"  Width="100">
                <Button x:Name="ButtonAdd" Content="Add" Padding="5" Margin="10" Click="ButtonAdd_Click" />
                <Button x:Name="ButtonSave" Content="Save" Padding="5" Margin="10" Click="ButtonSave_Click" />
                <Button x:Name="ButtonLoad" Content="Load" Padding="5" Margin="10" Click="ButtonLoad_Click" />
            </StackPanel>

            <ListView x:Name="LvStudents" />

        </DockPanel>

    </Grid>
</Window>
